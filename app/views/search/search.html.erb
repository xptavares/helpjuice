<%- model_class = Article -%>
<div class="page-header">
  <h1><%= t('article.title') %></h1>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= form_for search_path, method: :get, html: { class: 'form-horizontal' } do |f| %>
      <div class="input-group">
        <%= text_field_tag :q, params[:q], class: "form-control", placeholder: "Search for..." %>
        <span class="input-group-btn">
          <%= submit_tag "Go", name: nil, class: "btn btn-default" %>
        </span>
      </div>
    <% end %>
  </div>
</div>

<br>

<%= render "articles/articles_thumnail" %>
